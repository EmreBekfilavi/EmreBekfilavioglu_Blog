@using EmreBekfilavioglu_Blog.Models.ViewModels


@model List<KonuAtama_VM>

@{
	ViewData["Title"] = "KonuAtama"; 
}


<form asp-action="Index" asp-controller="Konu">

	<table class="table table-striped">

		<thead>
			<tr>
				<th></th>
				<th>Konu İsmi</th>
			</tr>
		</thead>

		<tbody>

			@for (int i = 0; i < Model.Count; i++)
			{
				<tr>
					<td><input type="checkbox" asp-for="@Model[i].SeciliMi" /></td>
					<td>@Model[i].KonuAdi</td>

					<input type="hidden" asp-for="@Model[i].KonuID" />
					<input type="hidden" asp-for="@Model[i].KonuAdi" />

				</tr>
			}

			<tr>
				<td colspan="2">
					<button type="submit" class="btn btn-secondary">Konuları Kaydet</button>
				</td>
			</tr>

		</tbody>


	</table>

</form>




