@using EmreBekfilavioglu_Blog.Models.ViewModels
@model GirisYap_VM

@{
    ViewData["Title"] = "Giris";
}

<h1 class="text-center text-primary">Giriş Yap</h1>

<hr />

@if(ViewData["Result"] != null)
{
    <h4 class="alert alert-danger text-center">@ViewData["Result"]</h4>
}

<div class="row justify-content-center align-items-center">
    <div class="col-md-4 justify-content-center">
        <form asp-action="Giris">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="EMail" class="control-label"></label>
                <input asp-for="EMail" class="form-control" />
                <span asp-validation-for="EMail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sifre" class="control-label"></label>
                <input asp-for="Sifre" class="form-control" type="password" />
                <span asp-validation-for="Sifre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Giriş Yap" class="btn btn-primary mt-4" />
            </div>
        </form>
        <p class="mt-3"><a asp-controller="Home" asp-action="Hakkimizda">Hakkımızda Daha Fazla Bilgi İçin Tıklayabilirsiniz...</a></p>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
