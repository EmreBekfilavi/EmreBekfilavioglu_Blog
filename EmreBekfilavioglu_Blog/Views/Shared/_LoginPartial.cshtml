@using EmreBekfilavioglu_Blog.Models.Identity
@using Microsoft.AspNetCore.Identity
@inject UserManager<Uye> UserManager
@inject SignInManager<Uye> SignInManager


@if (SignInManager.IsSignedIn(User))
{

	<li class="nav-item">
		<a class="nav-link px-lg-3 py-3 py-lg-4" asp-area="" asp-controller="Ayarlar" asp-action="Detay" asp-route-id="@UserManager.GetUserId(User)">Ayarlar</a>
	</li>

	<li class="nav-item">
		<a class="nav-link px-lg-3 py-3 py-lg-4" asp-area="" asp-controller="Login" asp-action="Cikis">Çıkış</a>
	</li>

}
else
{


	<li class="nav-item">
		<a class="nav-link px-lg-3 py-3 py-lg-4" asp-area="" asp-controller="Login" asp-action="Giris">Giriş Yap</a>
	</li>

	<li class="nav-item">
		<a class="nav-link px-lg-3 py-3 py-lg-4" asp-area="" asp-controller="Login" asp-action="KayitOl">Kayıt Ol</a>
	</li>

}


