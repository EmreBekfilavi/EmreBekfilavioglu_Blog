@model EmreBekfilavioglu_Blog.Models.Identity.Uye

@{
    ViewData["Title"] = "YazanUyeGoruntule";
    ViewData["ResimYolu"] = "assets/img/post-bg.jpg";
}

<h1 class="text-center text-primary">Yazar Bilgileri</h1>

<div>
    <hr />
    <dl class="row justify-content-center text-center">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UyeAdi)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UyeAdi)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UyeSoyadi)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UyeSoyadi)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UyeAciklamasi)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UyeAciklamasi)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UyeResmi)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UyeResmi)
        </dd>     
    </dl>
   
    <table class="table table-striped text-center">
        <thead>
            <tr>
                <th>Yazilan Makaleler</th>
            </tr>
        </thead>

        <tbody>
            @foreach (Makale makale in Model.YazilanMakaleler)
            {
                <tr>
                    <td>@makale.Baslik</td>
                </tr>          
            }
        </tbody>
    
    </table>
</div>

