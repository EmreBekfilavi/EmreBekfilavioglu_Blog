@model IEnumerable<Makale>

@{
	ViewData["Title"] = "EnCokOkunanlar";
}

<h1 class="text-center text-success">En Çok Okunanlarımız</h1>

<div class="row justify-content-center">

	<table class="table table-striped text-center">
		<thead>
			<tr>
				<th>Makale Başlığı</th>
				<th>Okunma Sayısı</th>
			</tr>
		</thead>

		<tbody>
			@foreach(Makale makale in Model)
			{
				<tr>
					<td><a asp-route-id="@makale.MakaleID" asp-controller="Home" asp-action="MakaleOku">@makale.Baslik</a></td>
					<td>@makale.OkunmaSayisi</td>
				</tr>
			}
		</tbody>

	</table>

</div>
